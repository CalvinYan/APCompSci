import java.awt.*;
import javax.swing.JFrame;

public class FlagFrame extends JFrame {
	
	private FlagPanel panel = new FlagPanel(380, 200);
	
	public FlagFrame() {
		init();
	}
	
	public void init() {
		panel.setPreferredSize(new Dimension(380, 200));
		this.add(panel);
		this.setBackground(Color.DARK_GRAY);
		this.setResizable(false);
		pack();
		repaint();
	}
	
	public void paint(Graphics g) {
		g.setColor(Color.RED);
		for (int i = 0; i < 7; i++) {
			g.fillRect(0, (i + 1) * 400/13, 380, 200/13);
		}
	}
	
	
}
