import java.awt.*;

public class FlagPanel extends Panel {
	
	public FlagPanel(int width, int height) {
		setPreferredSize(new Dimension(width, height));
		init();
	}
	
	public void init() {
		setBackground(Color.WHITE);
		setVisible(true);
		repaint();
	}
	
	public void paint(Graphics g) {
		g.setColor(Color.RED);
		for (int i = 0; i < 6; i++) {
			g.fillRect(0, i * 2 * getHeight() / 13, getWidth(), getHeight() / 13);
		}
		g.fillRect(0, getHeight() * 12 / 13, getWidth(), getHeight() / 13);
		g.setColor(Color.BLUE);
		g.fillRect(0, 0, (int)(0.76 * getHeight()), getHeight() * 7 / 13);
	}
	
}
