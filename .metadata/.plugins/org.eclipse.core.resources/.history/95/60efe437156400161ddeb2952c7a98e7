import java.awt.*;
import javax.swing.JFrame;

public class FlagFrame extends JFrame {
	
	public FlagFrame() {
		init();
	}
	
	public void init() {
		setSize(380, 200);
		this.setBackground(Color.WHITE);
		this.setResizable(false);
		repaint();
	}
	
	public void paint(Graphics g) {
		g.setColor(Color.RED);
		for (int i = 0; i < 7; i++) {
			g.fillRect(0, (i + 1) * 400/13, 380, 200/13);
		}
	}
	
	
}
